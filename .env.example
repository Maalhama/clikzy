# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Site URL for auth redirects (production)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Stripe - Payment processing
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_POPULAR=price_xxx
STRIPE_PRICE_PREMIUM=price_xxx

# Resend - Email service
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=CLIKZY <noreply@clikzy.fr>

# Cron Jobs (for cron-job.org)
CRON_SECRET=your-cron-secret

# Redis/Upstash - Rate limiting (optional for dev, required for production)
# Create free database at https://console.upstash.com
# Falls back to in-memory rate limiting if not configured
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here

# Sentry - Error monitoring (optional)
# Create a project at https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxx@o123.ingest.sentry.io/456

# Umami Analytics - Privacy-friendly analytics (optional)
# Deploy your own: https://umami.is/docs/install
# Or use Umami Cloud: https://cloud.umami.is
NEXT_PUBLIC_UMAMI_URL=https://your-umami-instance.vercel.app
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id
